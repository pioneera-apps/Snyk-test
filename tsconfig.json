{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["esnext"],
    "types": ["jest", "node"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "src/test/**/*"],
  "exclude": ["node_modules"]
}
